	${0:/* items */}, 
};
typedef enum ${1:name} $1;
endsnippet

snippet new "constructor (rvg)"
$1* $1_new() { 
	$1* x = malloc(sizeof(${1:name}));
	if (!x) { return NULLPTR; }

	${0:/* stuff */}
	return x;
};
endsnippet

