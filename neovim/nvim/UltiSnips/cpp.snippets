snippet cl "class .. (class)"
class ${1:`!p snip.rv = snip.basename or "name"`}${2:: Parent} {
	public:
		explicit ${1/(\w+).*/$1/}();
		virtual ~${1/(\w+).*/$1/}();

	private:
		// no copies
		${1/(\w+).*/$1/}(const ${1/(\w+).*/$1/}&);
		${1/(\w+).*/$1/}& operator=(const ${1/(\w+).*/$1/}&);
};
endsnippet

snippet for "for loop (rvg)"
for(int ${1:i}=0; $1<${2:count}; ++$1) {
	${0}
}
endsnippet

